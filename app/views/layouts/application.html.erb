<!DOCTYPE html>
<html>
  <head>
    <title>Kings</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Kings</a>
        <nav class="navbar navbar-light">
          <% if user_signed_in? %>
            <%= link_to "マイページ", "/users/#{current_user.id}", { :class => "btn btn-primary" } %>
          <% else %>
            <%= link_to "ログインする", { :controller => "devise/sessions", :action => "new" }, { :class => "btn btn-primary" } %>
          <% end%>
        </nav>
      </nav>
    </header>
    <div class="body">
      <%= yield %>
    </div>
  </body>
</html>
