<div class="posts-index">
  <div class="posts-index__box">
    <% @reviews.each do |review| %>
      <div class="card posts-index__box__card" style="width: 16rem;">
        <%= image_tag(review.review_image.url, class: "card-img-top") %>
        <%= link_to "/users/#{review.user_id}" do %>
          <div class="posts-index__box__card_user">
            <%= image_tag(review.user.image.url, class: "card-img-top posts-index__box__card_user__image") %>
            <p class="card-text"><%= review.user.nick_name %></p>
          </div>
        <% end %>

        <div class="card-body">
          <p class="card-text"><%= review.item_comment %></p>
        </div>
        <div class="posts-index__box__item">
          <%= image_tag(review.item_image, class: "card-img-top posts-index__box__item__image") %>
          <div>
            <%= review.title %>
            <%= review.cosmetic.valuation_average %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @reviews %>
</div>

<%= render :partial => "share/sidebar_contens" %>